<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AboutDevelopersFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/redish"
            android:text="About Developers"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:gravity="center"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_color="@color/redish"
            app:civ_border_width="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/developer_rezwan" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:text="Rezwan Al Kaoser"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:text="Dept. of CSE, KUET"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EED9E4D9"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"/>



        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/redish"
            app:civ_border_width="4dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/developer_tamzid" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:text="Tamzid Hasan"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:text="Dept. of CSE, KUET"></TextView>

    </LinearLayout>

</ScrollView>