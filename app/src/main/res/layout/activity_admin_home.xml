<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backand.AdminHome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelativelayoutHeader">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/RelativeImageView">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:src="@drawable/profile_default"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/RelativeImageView"
                    android:layout_toLeftOf="@id/logoutAdmin"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/AdminNameTextFirld"
                            >
                            <TextView
                                android:padding="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tamzid Hasan"
                                android:textSize="22dp"
                                >

                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/AdminNameTextFirld">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Administrator"
                                android:textSize="17sp"
                                android:paddingLeft="15dp"
                                android:paddingBottom="10sp"

                                >

                            </TextView>
                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/logoutAdmin">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/user_interface_exit_icon"
                        />
                </RelativeLayout>
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/RelativelayoutHeader">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/contentName1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/adminAddContent"
                                    android:textSize="15sp"
                                    android:padding="5dp"
                                    android:layout_marginLeft="10dp"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/contentName1">
                                <HorizontalScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <RelativeLayout
                                            android:id="@+id/relativeDoner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp">
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/adddonoricon">
                                                <Button
                                                    android:layout_width="60dp"
                                                    android:layout_height="60dp"
                                                    android:layout_margin="10dp"
                                                    android:background="@drawable/blooddrop"/>
                                            </RelativeLayout>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/adddonoricon">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Doner"
                                                    android:textSize="20dp"
                                                    android:padding="5dp"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    />

                                            </RelativeLayout>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:id="@+id/relativeAmbulence"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_toRightOf="@id/relativeDoner">
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:id="@+id/addambulenceicon">
                                                <Button
                                                    android:layout_width="60dp"
                                                    android:layout_height="60dp"
                                                    android:layout_margin="10dp"
                                                    android:background="@drawable/blooddrop"/>
                                            </RelativeLayout>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/addambulenceicon">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Ambulence"
                                                    android:textSize="20dp"
                                                    android:padding="5dp"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    />

                                            </RelativeLayout>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:id="@+id/relativeHospital"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_toRightOf="@id/relativeAmbulence">
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:id="@+id/addHospitalicon">
                                                <Button
                                                    android:layout_width="60dp"
                                                    android:layout_height="60dp"
                                                    android:layout_margin="10dp"
                                                    android:background="@drawable/blooddrop"/>
                                            </RelativeLayout>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/addHospitalicon">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Hospital"
                                                    android:textSize="20dp"
                                                    android:padding="5dp"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    />

                                            </RelativeLayout>
                                        </RelativeLayout>
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:layout_toRightOf="@id/relativeHospital">
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerHorizontal="true"
                                                android:id="@+id/addAdminicon">
                                                <Button
                                                    android:layout_width="60dp"
                                                    android:layout_height="60dp"
                                                    android:layout_margin="10dp"
                                                    android:background="@drawable/blooddrop"/>
                                            </RelativeLayout>
                                            <RelativeLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@id/addAdminicon">
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Admin"
                                                    android:textSize="20dp"
                                                    android:padding="5dp"
                                                    android:layout_marginLeft="10dp"
                                                    android:layout_marginRight="10dp"
                                                    />

                                            </RelativeLayout>
                                        </RelativeLayout>
                                    </RelativeLayout>
                                </HorizontalScrollView>
                            </RelativeLayout>
                        </RelativeLayout>



                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>