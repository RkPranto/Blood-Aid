<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:elevation="20dp"
    android:background="@color/white"
    android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/blood_group_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AB+"
        android:textColor="@color/redish"
        android:shadowColor="@color/light_red"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="10"
        android:textSize="45dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"></TextView>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="Name: Rk Prnato"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/district_text"
        android:textColor="@color/blackish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toEndOf="@+id/blood_group_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/district_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="District: Gaibandha"
        android:textColor="@color/blackish"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/last_donated_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toEndOf="@+id/blood_group_text"
        app:layout_constraintTop_toBottomOf="@id/name_text" />

    <TextView
        android:id="@+id/last_donated_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="Last Donated: 02-04-2019"
        android:textColor="@color/blackish"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/donate_count_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toEndOf="@+id/blood_group_text"
        app:layout_constraintTop_toBottomOf="@id/district_text" />

    <TextView
        android:id="@+id/donate_count_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="Donated : 2 times"
        android:textSize="18sp"
        android:textColor="@color/blackish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toEndOf="@+id/blood_group_text"
        app:layout_constraintTop_toBottomOf="@id/last_donated_text" />


    <Button
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_phone"
        android:gravity="center"
        android:padding="10dp"
        android:text="Call"
        android:textColor="@color/redish"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/message_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/blood_group_text"
        app:layout_constraintTop_toBottomOf="@id/donate_count_text" />

    <Button
        android:id="@+id/message_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_email"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Message"
        android:textColor="@color/redish"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toEndOf="@+id/call_btn"
        app:layout_constraintTop_toBottomOf="@id/donate_count_text"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>