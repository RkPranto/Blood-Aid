<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTheme" >
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="colorPrimaryDark">@color/super_light_black</item>
        <item name="colorAccent">@color/light_green</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

    <style name="HomeTheme">
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorPrimary">@color/super_light_black</item>
    </style>

</resources>
